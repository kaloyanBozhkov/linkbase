{
  "extends": ["@tsconfig/react-native/tsconfig.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "ES2017", "ES2018", "ES2020"],
    "target": "ES2018",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../backend"
    }
  ]
}
