  "name": "@linkbase/backend",
  "version": "1.0.0",
  "description": "Backend API for Linkbase - A personal database of connections",
  "main": "dist/src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && webpack --mode production",
    "dev": "webpack --mode development --watch",
    "db:generate": "cd ../packages/prisma && pnpm run db:generate",
    "db:push": "cd ../packages/prisma && pnpm run db:push",
    "translate": "tsx src/scripts/translate-with-gpt.ts",
    "translate:missing": "tsx src/scripts/translate-with-gpt.ts --partial"
  },
  "keywords": [
    "linkbase",
    "connections",
    "contacts",
    "api"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.858.0",
    "@aws-sdk/lib-storage": "^3.858.0",
    "@aws-sdk/s3-request-presigner": "^3.858.0",
    "@linkbase/prisma": "workspace:*",
    "@linkbase/shared": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-email/render": "^1.2.1",
    "@t3-oss/env-core": "^0.7.1",
    "@trpc/server": "^11.4.3",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "deverything": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonrepair": "^3.13.0",
    "openai": "^5.10.2",
    "resend": "^6.0.1",
    "superjson": "^1.13.3",
    "tsc-alias": "^1.8.16",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.13.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/ws": "^8.5.10",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "copyfiles": "^2.4.1",
    "nodemon-webpack-plugin": "^4.8.2",
    "rimraf": "^6.0.1",
    "swc-loader": "^0.2.6",
    "typescript": "^5.2.2",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": "22.x"
  }
