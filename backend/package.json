{
  "name": "@linkbase/backend",
  "version": "1.0.0",
  "description": "Backend API for Linkbase - A personal database of connections",
  "main": "dist/src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc && tsc-alias && copyfiles src/pages/*.html dist --parents && prisma generate",
    "start": "node -r tsconfig-paths/register dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "linkbase",
    "connections",
    "contacts",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@linkbase/common": "link:../common",
    "@prisma/client": "^5.6.0",
    "@t3-oss/env-core": "^0.7.1",
    "@trpc/server": "^11.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "superjson": "^1.13.3",
    "tsc-alias": "^1.8.16",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "copyfiles": "^2.4.1",
    "prisma": "^5.6.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
